<!-- Bread -->
<section id="Breads" class="flex w-full h-screen">
    <div class="flex h-min w-full pt-10 flex-col">
        <div class="flex-col ml-28  w-full flex">
            <h1 class="text-2xl">#01</h1>
            <h1 class="text-7xl">BREADS</h1>
        </div>
        <div class="justify-center flex parent-item gap-10 ">
            <% products.forEach(product => { %>
                <form action="/add-to-cart/<%= product._id %>" method="post">

                    <div class="collection-image flex">
                        <div class="image-container flex border border-black flex-col ">
                            <img na class="shop-item-image h-96 w-80" src="<%= product.image %>" alt="">  
                    <div class="flex flex-row justify-between">
                        <div class="w-36 h-min flex-col pl-3 pt-2 ">
                            <span  class="shop-item-title"><%= product.name %></span>
                            <span  class="shop-item-price">$<%= product.price %></span>
                        </div>

                        
                        <div class="flex items-center">
                            <button formaction="/add-to-cart/<%= product._id %>" formmethod="post" class="shop-item-button"><img alt="" src="/Images/picnic-basket.png" class="w-8 mr-3 mt-2"/></button>
                        </div>
                    </div>
                </div>       
            </div>
        </form>
            <% }) %>
        </div>
        
    </div>
    
</section>
