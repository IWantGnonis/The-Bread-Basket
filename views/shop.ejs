<section id="Breads" class="flex w-full min-h-screen">
    <div class="flex h-min w-full pt-10 flex-col">
        <div class="flex-col ml-28 w-full flex">
            <h1 class="text-2xl">#01</h1>
            <h1 class="text-7xl">BREADS</h1>
        </div>
        <div class="justify-center grid grid-cols-3 gap-x-8 gap-y-12 px-20 py-10 parent-item">
            <% breads.forEach(product => { %>
                <form action="/add-to-cart" method="post" class="add-to-cart-form">
                    <div class="collection-image">
                        <div class="image-container flex border border-black flex-col hover:shadow-lg transition-shadow">
                            <img class="shop-item-image h-96 w-full object-cover" src="<%= product.image %>" alt="">  
                            <div class="flex flex-row justify-between p-4">
                                <div class="flex-col">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <input type="hidden" name="productName" value="<%= product.name %>">
                                    <input type="hidden" name="price" value="<%= product.price %>">
                                    <span class="shop-item-title block text-lg font-medium"><%= product.name %></span>
                                    <span class="shop-item-price block text-gray-800">$<%= product.price %></span>
                                </div>
                                <div class="flex items-center">
                                    <button type="submit" class="shop-item-button transition-transform hover:scale-110">
                                        <img alt="Add to cart" src="/Images/picnic-basket.png" class="w-8"/>
                                    </button>
                                </div>
                            </div>
                        </div>       
                    </div>
                </form>
            <% }); %>
        </div>
    </div>
