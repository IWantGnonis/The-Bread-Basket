              </div>



              </ul>
            </div>
          </div>
    </div>



<!-- Basket -->









<section class="basket-section w-full h-full select-none">
        
    <div class="basket-container flex flex-row object-cover">
        <div class="basket-cart ml-10  h-max">
                <div class="ml-10 flex flex-row justify-between">
                    <div>
                        <h1 class="text-bas text-6xl">Basket</h1>
                    </div>
                    <div>
                        <h1 class="price-t pt-6 pr-6 text-2xl">Price</h1>
                    </div>
                </div>


                <div class="s-line flex justify-center">
                    <div class="l-line"></div>
                </div>
                
                <!--------------------------------------------------- Main list  ------------------------------------------------------->
                <% if (cart && cart.items && cart.items.length > 0) { %>
                    <% cart.items.forEach(item => { %>
                        <% if (item.productId) { %>
                            <div class="list w-full ml-10 flex-row flex">
                                <div class="list-img">
                                    <img class="w-48 h-48 my-5 " src="<%= item.productId.image %>" alt=""/>
                                </div>
                                <div>
                                    <div class="tp justify-between flex flex-row ">
                                        <h1 class="cart-item-title text-4xl pt-4 pl-4 pb-4"><%= item.productId.name %></h1>
                                        <h1 class="text-2xl pt-4 ">$<%= item.productId.price %></h1>
                                    </div>
                                    <div class="text-p pl-4 break-words">
                                        <p><%= item.productId.desc %></p>
                                    </div>
                                    <div class="pl-4 pt-4 flex flex-row">
                                        <h1 class="shadow-lg w-min h-min">Qty:</h1>
                                        <select class="dropd shadow-lg border-none outline-none">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                        <div class="pl-4 text-red-500">
                                            <button formaction="" class="btn-danger">Delete</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <p>Product not found</p>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <p class="m-10 text-2xl">Your cart is empty</p>
                <% } %>
                <div class="s-line flex justify-center">
                    <div class="l-line"></div>
                </div>
            </div>

                
            <div class="payout ml-10 flex items-start justify-evenly flex-col">
                <div class="flex w-full justify-center flex-row text-2xl">
                    <div>

                        <!-- backend -->
                    </div>
                </div>
                <div class="w-full h-9 flex justify-center ">
                    <button id="btn" class="payout-btn rounded-xl w-64 h-9 shadow-sm">Proceed to Buy</button>
                </div>
            </div>
    </div>
    </section>
    <script src="/basket/addtocart.js"async></script>

















