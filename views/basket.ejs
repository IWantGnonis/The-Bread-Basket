<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

  <div class="container mx-auto mt-10">
    <h1 class="text-3xl font-bold text-center mb-8">Your Shopping Cart</h1>
    
    <% if (cart && cart.items.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% cart.items.forEach(item => { %>
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <img src="<%= item.productId.image %>" alt="<%= item.productId.name %>" class="w-full h-40 object-cover mb-4">
            <h3 class="text-xl font-semibold mb-2"><%= item.productId.name %></h3>
            <p class="text-gray-600">Price: $<%= item.productId.price %></p>
            <p class="text-gray-600">Quantity: <%= item.quantity %></p>

            <!-- You can add functionality to remove or update quantity here -->
            <div class="mt-4">
              <button class="bg-red-500 text-white px-4 py-2 rounded">Remove</button>
              <button class="bg-blue-500 text-white px-4 py-2 rounded ml-2">Update Quantity</button>
            </div>
          </div>
        <% }) %>
      </div>
      
      <div class="mt-6 text-right">
        <a href="/" class="bg-green-500 text-white px-6 py-3 rounded">Proceed to Checkout</a>
      </div>
    
    <% } else { %>
      <p class="text-center text-lg text-gray-700">Your cart is empty.</p>
    <% } %>

  </div>

</body>
</html>
